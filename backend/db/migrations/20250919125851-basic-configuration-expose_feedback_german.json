{
  "version": "0.0.1",
  "name": "Feedback-Bewertungskonfiguration",
  "description": "Bewertungskriterien für Feedbackqualität",
  "type": "assessment",
  "rubrics": [
    {
      "name": "Form und sprachliche Qualität",
      "description": "Form, Struktur, Sprache und Ton des Feedbacks",
      "criteria": [
        {
          "name": "Zusammenfassung vorhanden",
          "function": "auto_grading",
          "maxPoints": 2,
          "scoring": [
            { "points": 0, "description": "Keine Zusammenfassung vorhanden oder spiegelt das Verständnis nicht wider" },
            { "points": 1, "description": "Einfache Zusammenfassung, zeigt grundlegendes Verständnis" },
            { "points": 2, "description": "Prägnante und genaue Zusammenfassung, reflektiert das Verständnis klar und schafft Vertrauen" }
          ]
        },
        {
          "name": "Klarheit (Clarity)",
          "function": "auto_grading",
          "maxPoints": 2,
          "scoring": [
            { "points": 0, "description": "Feedback unklar, unzusammenhängend, schwer nachvollziehbar" },
            { "points": 1, "description": "Weitgehend klar, aber ohne konkrete Verweise" },
            { "points": 2, "description": "Klar, gut strukturiert, leicht verständlich, mit präzisen Verweisen" }
          ]
        },
        {
          "name": "Sprache",
          "function": "auto_grading",
          "maxPoints": 1,
          "scoring": [
            { "points": 0, "description": "Viele sprachliche Fehler (z. B. falsches Tempus, falsche Personalpronomen)" },
            { "points": 1, "description": "Kaum sprachliche Fehler, klare Sätze mit einheitlicher Terminologie" }
          ]
        },
        {
          "name": "Ton",
          "function": "auto_grading",
          "maxPoints": 2,
          "scoring": [
            { "points": 0, "description": "Unangemessen, wertend, destruktiv oder persönlich" },
            { "points": 1, "description": "Respektvoll, aber stellenweise unklar oder weniger freundlich" },
            { "points": 2, "description": "Ruhig, respektvoll, konstruktiv, sachlich, nur auf den Text bezogen" }
          ]
        }
      ]
    },
    {
      "name": "Feed Up (Where am I going?)",
      "description": "Informationen über Lernziele und Erfolgskriterien",
      "criteria": [
        {
          "name": "Lernziele",
          "function": "auto_grading",
          "maxPoints": 2,
          "scoring": [
            { "points": 0, "description": "Keine Lernziele, unklar" },
            { "points": 1, "description": "Teils unklare, allgemein formulierte Lernziele" },
            { "points": 2, "description": "Klare, spezifische, herausfordernde Lernziele mit Orientierung" }
          ]
        },
        {
          "name": "Erfolgskriterien",
          "function": "auto_grading",
          "maxPoints": 2,
          "scoring": [
            { "points": 0, "description": "Keine Erfolgskriterien oder vage" },
            { "points": 1, "description": "Vorhanden, aber unpräzise/allgemein" },
            { "points": 2, "description": "Klare Erfolgskriterien, messbare Ziele, definierter Erfolg" }
          ]
        }
      ]
    },
    {
      "name": "Feed Back (How am I going?)",
      "description": "Informationen zum aktuellen Leistungsstand",
      "criteria": [
        {
          "name": "Knowledge of result",
          "function": "auto_grading",
          "maxPoints": 1,
          "scoring": [
            { "points": 0, "description": "Keine Information, ob die Aufgabe gelöst wurde" },
            { "points": 1, "description": "Klare Information, ob die Aufgabe gelöst wurde" }
          ]
        },
        {
          "name": "Knowledge of correct response",
          "function": "auto_grading",
          "maxPoints": 1,
          "scoring": [
            { "points": 0, "description": "Keine Information zur richtigen Antwort" },
            { "points": 1, "description": "Richtige Antwort klar mitgeteilt" }
          ]
        },
        {
          "name": "Task Feedback (Elaborated Concepts)",
          "function": "auto_grading",
          "maxPoints": 2,
          "scoring": [
            { "points": 0, "description": "Keine Hinweise zu Regeln, Konzepten oder Fehlern" },
            { "points": 1, "description": "Teilweise Hinweise (z. B. zu Regeln, Konzepten oder Fehlern)" },
            { "points": 2, "description": "Klare Hinweise zu Regeln, Konzepten und Fehlern (Ort, Quelle, Typ)" }
          ]
        },
        {
          "name": "Self Feedback",
          "function": "auto_grading",
          "maxPoints": 1,
          "scoring": [
            { "points": 0, "description": "Self-Feedback vorhanden, aber nicht mit Task/Process kombiniert" },
            { "points": 1, "description": "Kein Self-Feedback oder sinnvoll mit Task/Process kombiniert" }
          ]
        }
      ]
    },
    {
      "name": "Feed Forward (Where to next?)",
      "description": "Hinweise zur Weiterarbeit und Selbstregulation",
      "criteria": [
        {
          "name": "Knowledge about process/self regulation",
          "function": "auto_grading",
          "maxPoints": 1,
          "scoring": [
            { "points": 0, "description": "Keine Hinweise, keine Ansätze zur Selbstüberwachung" },
            { "points": 1, "description": "Hinweise auf Strategien oder Ansätze zur Selbstüberwachung/Selbsteinschätzung" }
          ]
        },
        {
          "name": "Lernkompetenz (Learning Skills)",
          "function": "auto_grading",
          "maxPoints": 1,
          "scoring": [
            { "points": 0, "description": "Keine Informationen zur Verbesserung von Lernfähigkeiten" },
            { "points": 1, "description": "Hinweise zur Verbesserung von Lernfähigkeiten und Umgang mit Herausforderungen" }
          ]
        }
      ]
    },
    {
      "name": "Content Quality",
      "description": "Korrektheit, Umsetzbarkeit und Argumentation",
      "criteria": [
        {
          "name": "Korrektheit",
          "function": "auto_grading",
          "maxPoints": 2,
          "scoring": [
            { "points": 0, "description": "Inhalt mit erheblichen Mängeln" },
            { "points": 1, "description": "Weitgehend richtig" },
            { "points": 2, "description": "Vollständig richtig" }
          ]
        },
        {
          "name": "Umsetzbarkeit",
          "function": "auto_grading",
          "maxPoints": 2,
          "scoring": [
            { "points": 0, "description": "Keine konkreten Handlungsanweisungen, schwer umsetzbar" },
            { "points": 1, "description": "Einige Handlungsanweisungen, teils unklar" },
            { "points": 2, "description": "Klares, spezifisches, umsetzbares Feedback" }
          ]
        },
        {
          "name": "Argumentation",
          "function": "auto_grading",
          "maxPoints": 1,
          "scoring": [
            { "points": 0, "description": "Aussagen ohne Belege, oberflächlich" },
            { "points": 1, "description": "Aussagen durch Belege/Beispiele untermauert, klar nachvollziehbar" }
          ]
        }
      ]
    },
    {
      "name": "Fehler in Feedback",
      "description": "Fehlerarten im Feedback (Abzüge)",
      "criteria": [
        {
          "name": "Vernachlässigung",
          "function": "manual_grading",
          "maxPoints": -1,
          "scoring": [
            { "points": 0, "description": "Alle wichtigen Details berücksichtigt" },
            { "points": -1, "description": "Wichtige Details übersehen" }
          ]
        },
        {
          "name": "Vage Kritik",
          "function": "manual_grading",
          "maxPoints": -1,
          "scoring": [
            { "points": 0, "description": "Kritik spezifisch" },
            { "points": -1, "description": "Unspezifische Kritik" }
          ]
        },
        {
          "name": "Außerhalb des Umfangs",
          "function": "manual_grading",
          "maxPoints": -1,
          "scoring": [
            { "points": 0, "description": "Vorschläge im Rahmen" },
            { "points": -1, "description": "Vorschläge außerhalb des Rahmens" }
          ]
        },
        {
          "name": "Fehlende Referenz",
          "function": "manual_grading",
          "maxPoints": -1,
          "scoring": [
            { "points": 0, "description": "Methoden mit Begründung/Referenzen" },
            { "points": -1, "description": "Methoden ohne Begründung/Referenzen" }
          ]
        },
        {
          "name": "Widerspruch",
          "function": "manual_grading",
          "maxPoints": -1,
          "scoring": [
            { "points": 0, "description": "Feedback konsistent" },
            { "points": -1, "description": "Widersprüchliches Feedback" }
          ]
        }
      ]
    },
    {
      "name": "Sonstiges",
      "description": "Zusatzpunkte oder Abzüge",
      "criteria": [
        {
          "name": "Zusatzpunkte",
          "function": "manual_grading",
          "maxPoints": 1,
          "scoring": []
        },
        {
          "name": "Punktabzüge",
          "function": "manual_grading",
          "maxPoints": -1,
          "scoring": []
        }
      ]
    }
  ]
}
